<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Game"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.unistmo.edu.a8_puzzle.MainActivity">

    <FrameLayout
        android:id="@+id/GameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/Button01"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="1"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button03"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="3"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button04"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="4"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button06"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="6"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button07"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="110px"
            android:layout_y="215px"
            android:text="7"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button08"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="8"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button05"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="5"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button00"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="48px" />

        <Button
            android:id="@+id/Button02"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="2"
            android:textSize="48px" />
    </FrameLayout>

    <Button
        android:id="@+id/btnRevolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="sans-serif-condensed"
        android:text="Revolver"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnResolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnRevolver"
        android:layout_alignBottom="@+id/btnRevolver"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="sans-serif-condensed"
        android:text="Resolver"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />


</RelativeLayout>
